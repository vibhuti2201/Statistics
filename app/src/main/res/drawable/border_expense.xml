<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>

    <layer-list>

        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/white"/>
            </shape>
        </item>
        <item
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp">

            <shape>
                <solid android:color="@color/white"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/grey"/>
            </shape>
        </item>
        <item android:right="5dp">
            <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow"/>
        </item>
    </layer-list>
</item>
</selector>